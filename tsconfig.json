{
  "ts-node": {
    "transpileOnly": true,
    "typeCheck": false
  },
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "target": "es6",
    "noImplicitAny": false,
    "noEmit": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "../dist",
    "removeComments": true,
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
    //    "paths": {
    //      "*": [
    //        "node_modules/*"
    //      ]
    //    }
  },
  "include": [
    "src/**/*"
  ]
}
